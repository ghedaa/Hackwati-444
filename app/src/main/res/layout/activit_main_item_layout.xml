<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:backgroundTint="#fff"
    android:elevation="3dp"
    card_view:cardCornerRadius="12dp"
    app:ignore="NamespaceTypo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/storyimage"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#12111111"
            android:backgroundTint="#fff"

            android:src="@drawable/box_shape" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#F5F5F5"
            android:text="انتبهي يا جود"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/channelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/channelimage"
                android:layout_marginTop="6dp"
                android:layout_marginRight="41dp"
                android:text="غيداءالعجاجي"

                android:textSize="13dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/channelimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="#111"
                app:civ_border_width="0dp"
                app:civ_shadow="false"
                app:civ_shadow_color="#111"
                app:civ_shadow_radius="0"
                app:src="@drawable/animal_elp" />
        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>