    <application
        android:name=".font.CustomFontApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".uploaded_stories.ListenToUserStory"></activity>
        <activity android:name=".uploaded_stories.UserUploadedStories" />
        <activity android:name=".SubscribersListActivity" />
        <activity android:name=".SubscribedListActivity" />
        <activity android:name=".Draft.ListenToStoryDraft" />
        <activity android:name=".Draft.ViewDraft" />
